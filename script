import pandas as pd
import numpy as np

#open the datasets
sales = pd.read_csv('Sales.csv')
webtraf = pd.read_csv('WebTraffic.csv')

#visualize the datasets 
sales.head()
webtraf.head()
sales.info()
webtraf.info()

#formatting dates
from datetime import datetime 
sales['day'] = datetime.strptime("15oct2018","%d%b%Y").strftime('%d-%m-%Y')
webtraf['day'] = datetime.strptime("15oct2018","%d%b%Y").strftime('%d-%m-%Y')

#check for missing values 
sales.isnull()
webtraf.isnull()
#non ci sono

#non serve rinominare le colonne
 
#add the number of visists in the sales dataset (se vogliamo lavorare su un solo dataset= DF altrimenti usiamo i 2 sopra)
visits = webtraf['visits']
df= sales.join(visits)
